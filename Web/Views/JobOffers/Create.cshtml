@model HR.DataAccess.Models.JobOffer

@{
    ViewData["Title"] = "Create";
}
<div class="form-group" style="margin-top:8px">
    <a asp-action="Index">Back to List</a>
</div>
<h4>Create Job Offer</h4>
<hr />


<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label class="control-label">Company</label>
                    <select class="form-control" asp-for="CompanyId" id="companiesSelect">
                        <option value="0">Select company</option>

                    </select>
                </div>

            </div>
            <div class="row ">
                <div class="col col-md-6">
                    <div class="row ">
                        <div class=" col-sm-12">

                            <label class=" control-label">Salary Range:</label>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col">
                            <div class="form-group col-sm-6">
                                <input asp-for="SalaryFrom" class="form-control" placeholder="From" />
                                <span asp-validation-for="SalaryFrom" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <input asp-for="SalaryTo" class="form-control" placeholder="To" />
                                <span asp-validation-for="SalaryFrom" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group col-sm-6">
                        <label asp-for="DateExpiration" class="control-label">Date Expiration</label>
                        <input asp-for="DateExpiration" type="date" class="form-control" />
                        <span asp-validation-for="DateExpiration" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col form-group col-sm-12">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>

@section Scripts {

<script>
    $(document).ready(() => {
        loadCompanies()
    });
    function loadCompanies(url) {
        console.log('@Url.Action("GetCompanies", "API")');
        $.ajax({
            url: '@Url.Action("GetCompanies", "API")',
            type: "GET",
            datatype: 'json',
            success: function (data) {
                console.log(data)
                data.forEach(x => {
                    $('#companiesSelect').append(`<option value="${x.id}"> 
                                       ${x.name} 
                                  </option>`);
                });
                },
        });
    }


</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
